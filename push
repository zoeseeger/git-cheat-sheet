#!/bin/zsh

# Check for a commit message
if [ -z "$1" ]; then
  echo "âŒ Please provide a commit message."
  echo "Usage: push \"Your commit message here\""
  exit 1
fi

# Add all changes
git add .

# Commit with message
git commit -m "$1" || {
  echo "âš ï¸ Commit failed. Possibly no changes to commit."
  exit 1
}


# Push to the current branch
echo "ğŸš€ Pushing to remote..."
if git push; then
  echo "âœ… Changes committed and pushed!"
else
  echo "âŒ Push failed. Please check your remote or network."
  exit 1
fi
